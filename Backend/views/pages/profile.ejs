<%- include('../partials/header'); %>

    <main class="main">

        <!-- Pricing Section -->
        <section id="pricing" class="pricing section mt-5">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>Profile</h2>
                <div class="container">

                    <div class="row gy-4">
                        <% if (account) { %>
                            <div class="col-lg-12" data-aos="zoom-in" data-aos-delay="100">
                                <div class="pricing-item">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon3">Account ID Private :</span>
                                        <input type="text" class="form-control" disabled id="basic-url"
                                            aria-describedby="basic-addon3" value="<%= account.privateKey %>"
                                            name="privateKey">
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon3">Account ID Public :</span>
                                        <input type="text" class="form-control" disabled id="basic-url"
                                            aria-describedby="basic-addon3" value="<%= account.publicKey %>"
                                            name="publicKey">
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon3">Name :</span>
                                        <input type="text" class="form-control" id="basic-url"
                                            aria-describedby="basic-addon3" value=" <%= account.name %>" name="name">
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon3">Password</span>
                                        <input type="password" class="form-control" id="basic-url"
                                            aria-describedby="basic-addon3" value="<%= account.password %>"
                                            name="password">
                                    </div>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Key01" name="key01"
                                            aria-label="Username">
                                        <span class="input-group-text">key01 & key02</span>
                                        <input type="text" class="form-control" placeholder="Key02" name="key02"
                                            aria-label="Server">
                                    </div>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Key03"
                                            aria-label="Username" name="key03">
                                        <span class="input-group-text">Key03 & Key04</span>
                                        <input type="text" class="form-control" placeholder="Key04" name="key04"
                                            aria-label="Server">
                                    </div>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" placeholder="Key05"
                                            aria-label="Username" name="key05">
                                        <span class="input-group-text">Key05 & Key06</span>
                                        <input type="text" class="form-control" placeholder="Key06" aria-label="Server"
                                            name="key06">
                                    </div>
                                    <button class="btn btn-success" onclick="loadDoc()">Change</button>
                                </div>
                            </div><!-- End Pricing Item -->
                            <% } %>

                    </div>

                </div>
            </div><!-- End Section Title -->



        </section><!-- /Pricing Section -->


    </main>

