    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i
            class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>
    <script>
        $("[name='password' ]").val("");
        function loadDoc() {
            let name = $(" [name='name' ]").val();
            let password = $("[name='password' ]").val();
            let privateKey = $("[name='privateKey' ]").val();
            let publicKey = $("[name='publicKey' ]").val();
            let key01 = $("[name='key01' ]").val();
            let key02 = $("[name='key02' ]").val();
            let key03 = $("[name='key03' ]").val();
            let key04 = $("[name='key04' ]").val();
            let key05 = $("[name='key05' ]").val();
            let key06 = $("[name='key06' ]").val();
            console.log("on LoadDoc")
            if (name.trim().length <= 0) {
                alert("Name cannot be empty");
                return;
            }
            if (password.trim().length <= 0) {
                alert("Password cannot be empty");
                return;
            }
            if (key01.trim().length <= 0) {
                alert("Key01 cannot be empty");
                return;
            }
            if (key02.trim().length <= 0) {
                alert("Key02 cannot be empty");
                return;
            }
            if (key03.trim().length <= 0) {
                alert("Key03 cannot be empty");
                return;
            }
            if (key04.trim().length <= 0) {
                alert("Key04 cannot be empty");
                return;
            }
            if (key05.trim().length <= 0) {
                alert("Key05 cannot be empty");
                return;
            }
            if (key06.trim().length <= 0) {
                alert("Key06 cannot be empty");
                return;
            }

            axios.post('/account/change', {
                name: name,
                password: password,
                privateKey: privateKey,
                publicKey: publicKey,
                key01: key01,
                key02: key02,
                key03: key03,
                key04: key04,
                key05: key05,
                key06: key06
            })
                .then((result) => {
                    if (result.status == 200) {
                        alert(result.data.note)
                    $(" [name='name' ]").val("");
                    $("[name='password' ]").val("");
                    $("[name='key01' ]").val("");
                    $("[name='key02' ]").val("");
                    $("[name='key03' ]").val("");
                    $("[name='key04' ]").val("");
                    $("[name='key05' ]").val("");
                    $("[name='key06' ]").val("");
                    return;
                }
                alert(result.data);
                }).catch((err) => {
                    alert("Invalid Key 01 - 06 please re-check!!!")
                });

        }

    </script>
    <%- include('../partials/footer'); %>