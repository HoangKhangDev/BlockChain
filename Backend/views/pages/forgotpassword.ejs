<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <% if (title) { %>
            <%- title -%>
                <% } else { %>
                    không có tiêu đề
                    <% } %>
    </title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
        crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

</head>

<body>

    <div class="container-fluid d-flex justify-content-center bg-dark text-white" style="height: 100vh;width: 100vw">
        <form method="post" action="/">
            <h1>CHANGE PASSWORD BY KEYS</h1>
            <br>
            Private Key : <input class="form-control usename" type="text" name="privateKey" placeholder="Private Key"
                id="input_username" /></br>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Key01" name="key01" aria-label="Username">
                <span class="input-group-text">key01 & key02</span>
                <input type="text" class="form-control" placeholder="Key02" name="key02" aria-label="Server">
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Key03" aria-label="Username" name="key03">
                <span class="input-group-text">Key03 & Key04</span>
                <input type="text" class="form-control" placeholder="Key04" name="key04" aria-label="Server">
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Key05" aria-label="Username" name="key05">
                <span class="input-group-text">Key05 & Key06</span>
                <input type="text" class="form-control" placeholder="Key06" aria-label="Server" name="key06">
            </div>
            New Password : <input class="form-control password" type="password" name="password" placeholder="Password"
                id="input_password" on /></br>
            <input type="button" value="Change Password" type="submit" class="btn btn-primary w-100"
                onclick="loadDoc()">
            <a class="mt-3 btn btn-warning w-100" href="/login">Go Back</a>
        </form>

    </div>
    <script>
        function loadDoc() {
            let password = $("[name='password' ]").val();
            let privateKey = $("[name='privateKey' ]").val();
            let publicKey = $("[name='publicKey' ]").val();
            let key01 = $("[name='key01' ]").val();
            let key02 = $("[name='key02' ]").val();
            let key03 = $("[name='key03' ]").val();
            let key04 = $("[name='key04' ]").val();
            let key05 = $("[name='key05' ]").val();
            let key06 = $("[name='key06' ]").val();
            console.log("on LoadDoc")
            if (privateKey.trim().length <= 0) {
                alert("Private Key cannot be empty");
                return;
            }
            if (password.trim().length <= 0) {
                alert("Password cannot be empty");
                return;
            }
            if (key01.trim().length <= 0) {
                alert("Key01 cannot be empty");
                return;
            }
            if (key02.trim().length <= 0) {
                alert("Key02 cannot be empty");
                return;
            }
            if (key03.trim().length <= 0) {
                alert("Key03 cannot be empty");
                return;
            }
            if (key04.trim().length <= 0) {
                alert("Key04 cannot be empty");
                return;
            }
            if (key05.trim().length <= 0) {
                alert("Key05 cannot be empty");
                return;
            }
            if (key06.trim().length <= 0) {
                alert("Key06 cannot be empty");
                return;
            }

            axios.post('/account/change', {
                password: password,
                privateKey: privateKey,
                publicKey: publicKey,
                key01: key01,
                key02: key02,
                key03: key03,
                key04: key04,
                key05: key05,
                key06: key06
            })
                .then((result) => {
                    if (result.status == 200) {
                        alert(result.data.note)
                        document.location.href = "/login"
                        $(" [name='privateKey' ]").val("");
                        $("[name='password' ]").val("");
                        $("[name='key01' ]").val("");
                        $("[name='key02' ]").val("");
                        $("[name='key03' ]").val("");
                        $("[name='key04' ]").val("");
                        $("[name='key05' ]").val("");
                        $("[name='key06' ]").val("");
                        return;
                    }
                    alert(result.data)

                }).catch((err) => {
                    console.log(err)
                });


        }

    </script>
</body>

</html>