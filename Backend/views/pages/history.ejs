<%- include('../partials/header'); %>


    <main class="main">

        <!-- Pricing Section -->
        <section id="pricing" class="pricing section mt-5">

            <!-- Section Title -->
            <div class="container section-title" data-aos="fade-up">
                <h2>History</h2>
                <div class="container">

                    <div class="row gy-4">
                        <% if (Array.isArray(addressData)&&addressData.length>0) { %>
                            <% addressData.forEach(function(Address){ %>

                                <div class="col-lg-6" data-aos="zoom-in" data-aos-delay="100">
                                    <div class="pricing-item">
                                        <h3>Transaction ID : <%= Address.transactionId %>
                                        </h3>
                                        <p class="description">Amount : <%= Address.amount %>
                                        </p>
                                        <p class="description">Sender : <%= Address.sender %>
                                        </p>
                                        <p class="description">Recipient : <%= Address.recipient %>
                                        </p>

                                    </div>
                                </div><!-- End Pricing Item -->
                                <% }); %>
                                    <% } else { %>
                                        <h3>No Transaction History</h3>
                                        <% } %>
                    </div>

                </div>
            </div><!-- End Section Title -->



        </section><!-- /Pricing Section -->


    </main>

