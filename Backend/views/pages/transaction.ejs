    <script>
        function loadDoc() {
            let recipient = $("[name='recipient' ]").val();
            let amount = $("[name='amount' ]").val();
            let coinNow = $("[name='coin' ]").val();
            if (recipient.trim().length <= 0) {
                alert("Recipient cannot be empty");
                return;
            }
            if (amount.trim().length <= 0) {
                alert("Amount cannot be empty");
                return;
            }
            if (amount > coinNow) {
                alert("Not enough coin");
                return;
            }
            axios.post('/profileTransaction', { recipient: recipient, amount: amount })
                .then((result) => {
                    alert("Send Success!");
                    $("[name='recipient' ]").val("");
                    $("[name='amount' ]").val("");
                    $('.input').val("");
                }).catch((err) => {
                    alert("Send Failed")
                });

        }

    </script>
