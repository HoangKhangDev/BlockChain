      <script>
            function loadDoc() {
                  let recipient = $("[name='recipient' ]").val();
                  let btn = document.getElementById("btn");
                  btn.disabled =true;
                  axios.post('/account/mine', { recipient: recipient })
                        .then((response) => {
                              const headers = response.headers;
                              alert(response.data.note + ` with hash ${response.data.block.hash} of index ${response.data.block.index} `);
                              $("[name='coin' ]").val(response.data.coin)
                              $("[name='coin_header' ]").val(response.data.coin)
                              btn.disabled =false;
                        }).catch((err) => {
                              alert("Send Failed")
                        });

            }

            </script>
